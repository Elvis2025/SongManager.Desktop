<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongManager.Desktop.Pages.Modals.SelectSingersModalPage"
             BackgroundColor="#97000000"
                Padding="200,50,200,50"
                MinimumHeightRequest="500"
                MinimumWidthRequest="500"
                Shell.PresentationMode="Modal"
             Title="SelectSingersModalPage">
    <Border Margin="0" Padding="0">
        <Grid BackgroundColor="{StaticResource Gray900}">

            <Label Text="Selecciona el cantante"
                    Margin="20,20"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    />
            <Entry Margin="20,62"
                    Placeholder="Buscar..."
                    VerticalOptions="Start"
                    TextChanged="FindSinger"
                 />

            <CollectionView ItemsSource="{Binding Singers}"
                            SelectedItem="{Binding CurrentSingersSelected}"
                    SelectionMode="Single"
                    Margin="0,120,0,80">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding FullName}" 
                       Padding="20,10" 
                       FontSize="26"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Cancelar"
                     VerticalOptions="End"
                     HorizontalOptions="Start"
                     Margin="20"
                     FontAttributes="Bold"
                     BackgroundColor="DarkRed"
                     Command="{Binding PopModalCommand}"
                     />

            <Button Text="Siguente"
                     VerticalOptions="End"
                     HorizontalOptions="End"
                     Margin="20"
                     FontAttributes="Bold"
                     BackgroundColor="DarkGreen"
                     Command="{Binding SelectSingerCommand}"
                     />
            
        </Grid>
    </Border>
</ContentPage>